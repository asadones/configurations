# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
setopt autocd
unsetopt beep
bindkey -v

zstyle :compinstall filename '/home/asadones/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

#Â Prompt configuration
autoload -U colors && colors
PROMPT="%{$fg[green]%}%n%{$reset_color%}@%{$fg[blue]%}%m %{$fg_no_bold[yellow]%}%1~ %{$reset_color%}% # "
RPROMPT="[%{$fg_no_bold[yellow]%}%?%{$reset_color%}]"

# Git Prompt
source ~/.zsh/git_prompt

# Load aliases
for alias_file in ~/.zsh/aliases/*; do
    source $alias_file
done

# Manage title
if [[ -a ~/.zsh/host_details ]]; then
    TITLE=`cat ~/.zsh/host_details`
    echo -ne "\e]1;$TITLE\a"
fi
